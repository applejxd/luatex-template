{
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    // スニペット補完中にも補完を使用
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    // json でコメント有効化
    "files.associations": {
        "*.json": "jsonc",
        ".textlintrc": "jsonc"
    },
    //----------//
    // textlint //
    //----------//
    "textlint.autoFixOnSave": true,
    "textlint.run": "onSave",
    //-------//
    // LaTeX //
    //-------//
    // タイプセット定義
    "latex-workshop.latex.recipes": [
        {
            "name": "lualatex",
            "tools": [
                "lualatex",
                "bibtex",
                "lualatex",
                "lualatex"
            ]
        },
    ],
    // コマンド定義
    "latex-workshop.latex.tools": [
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "--cmdx",
                "-file-line-error",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-halt-on-error",
                "%DOC_EXT%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
}